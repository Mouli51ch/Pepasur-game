# Multi-Chain Environment Configuration
# Copy this file to .env and configure for your target chain

# ============================================
# CHAIN SELECTION
# ============================================
# Set to one of: flow, ethereum, polygon, arbitrum
TARGET_CHAIN=flow

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
# Network: testnet, mainnet
NETWORK=testnet

# ============================================
# PRIVATE KEY (REQUIRED)
# ============================================
# Your wallet private key for deployment
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# ============================================
# CHAIN-SPECIFIC CONFIGURATION
# ============================================

# Flow Configuration
FLOW_TESTNET_RPC=https://testnet.evm.nodes.onflow.org
FLOW_MAINNET_RPC=https://mainnet.evm.nodes.onflow.org
FLOW_CHAIN_ID_TESTNET=545
FLOW_CHAIN_ID_MAINNET=747

# Ethereum Configuration
ETHEREUM_SEPOLIA_RPC=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_MAINNET_RPC=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_CHAIN_ID_SEPOLIA=11155111
ETHEREUM_CHAIN_ID_MAINNET=1

# Polygon Configuration
POLYGON_MUMBAI_RPC=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY
POLYGON_MAINNET_RPC=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_CHAIN_ID_MUMBAI=80001
POLYGON_CHAIN_ID_MAINNET=137

# Arbitrum Configuration
ARBITRUM_SEPOLIA_RPC=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_MAINNET_RPC=https://arb1.arbitrum.io/rpc
ARBITRUM_CHAIN_ID_SEPOLIA=421614
ARBITRUM_CHAIN_ID_MAINNET=42161

# ============================================
# INFURA CONFIGURATION (for Ethereum/Polygon)
# ============================================
INFURA_KEY=YOUR_INFURA_PROJECT_ID

# ============================================
# GAS CONFIGURATION
# ============================================
# Gas price in wei (optional, will use network defaults if not set)
GAS_PRICE=20000000000

# ============================================
# CONTRACT ADDRESSES (will be populated after deployment)
# ============================================
PEPASUR_CONTRACT_ADDRESS=
FAUCET_CONTRACT_ADDRESS=
