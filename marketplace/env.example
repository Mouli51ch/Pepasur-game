# ============================================
# PEPASUR MARKETPLACE - ENVIRONMENT CONFIG
# ============================================
# Copy this file to .env and fill in your values
# This file contains all environment variables needed for the marketplace

# ============================================
# REQUIRED: SYNAPSE SDK CONFIGURATION
# ============================================

# Private key for Filecoin wallet (Calibration testnet)
# Format: 0x followed by 64 hex characters
# Get test tokens from: https://faucet.calibration.fildev.network/
# Example: PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# ============================================
# OPTIONAL: NETWORK CONFIGURATION
# ============================================

# WebSocket RPC URL (defaults to Calibration testnet)
# Calibration testnet: https://api.calibration.node.glif.io/rpc/v1
# Mainnet: https://api.node.glif.io/rpc/v1
WS_RPC_URL=https://api.calibration.node.glif.io/rpc/v1

# Chain ID (defaults to 314159 for Calibration testnet)
# Calibration testnet: 314159
# Mainnet: 314
CHAIN_ID=314159

# ============================================
# OPTIONAL: STORAGE CONFIGURATION
# ============================================

# Storage provider type (warm, cold, or both)
# warm: Faster retrieval, higher cost
# cold: Slower retrieval, lower cost
STORAGE_PROVIDER=warm

# Storage duration in seconds (default: 1 day)
# 86400 = 1 day, 604800 = 1 week, 2592000 = 1 month
STORAGE_DURATION=86400

# ============================================
# OPTIONAL: PAYMENT CONFIGURATION
# ============================================

# Minimum tFIL balance required (in tFIL)
# Used to ensure wallet has enough funds for storage
MIN_TFIL_BALANCE=1.0

# Minimum USDFC balance required (in USDFC)
# Used for payment processing
MIN_USDFC_BALANCE=5.0

# ============================================
# OPTIONAL: DEBUGGING & LOGGING
# ============================================

# Enable debug mode (true/false)
# Shows detailed console logs and error messages
DEBUG=true

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# OPTIONAL: API ENDPOINTS (FUTURE INTEGRATION)
# ============================================

# Main marketplace API URL
MARKETPLACE_API_URL=https://api.pepasur.game

# Flow blockchain RPC URL
FLOW_RPC_URL=https://rest-testnet.onflow.org

# ============================================
# OPTIONAL: MARKETPLACE CONFIGURATION
# ============================================

# Default currency for pricing (FIL, tFIL, USDFC)
DEFAULT_CURRENCY=tFIL

# Maximum file size for NFT metadata (in MB)
MAX_METADATA_SIZE=10

# Enable/disable demo mode (true/false)
# When true, uses mock data instead of real Synapse storage
DEMO_MODE=false

# ============================================
# SETUP INSTRUCTIONS
# ============================================
# 1. Copy this file: cp env.example .env
# 2. Replace 0xYOUR_PRIVATE_KEY_HERE with your actual private key
# 3. Get test tokens: https://faucet.calibration.fildev.network/
# 4. Run: npm run dev
# 5. Visit: http://localhost:3000
