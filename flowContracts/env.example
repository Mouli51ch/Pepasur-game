# Flow EVM Testnet Configuration
# Copy this file to .env and fill in your values

# Private key of the account you want to use for deployment
# IMPORTANT: Never commit your actual private key to version control
# Get your private key from MetaMask or your wallet
PRIVATE_KEY=your_private_key_here

# PepAsur Contract Configuration
# Server signer address (oracle/game server address used to sign settlements)
SERVER_SIGNER=0x1234567890123456789012345678901234567890

# Fee recipient address (where house cut goes)
FEE_RECIPIENT=0x1234567890123456789012345678901234567890

# House cut in basis points (100 = 1%, 500 = 5%, 1000 = 10%)
# Maximum recommended: 2000 (20%)
HOUSE_CUT_BPS=500

# Optional: If you want to use a specific account index from your wallet
# ACCOUNT_INDEX=0

# Flow EVM Testnet RPC URL (already configured in hardhat.config.js)
# RPC_URL=https://testnet.evm.nodes.onflow.org

# Flow EVM Testnet Chain ID (already configured in hardhat.config.js)
# CHAIN_ID=545
